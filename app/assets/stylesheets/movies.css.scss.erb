body {
  font-family: Helvetica;
  background-image: url('<%= asset_path('stardust.png') %>');
  background-attachment: fixed;
  color: lightgray;
  letter-spacing: 1.5px;
  p {
    font-size: 12px;
  }
}

h1, h3, h2 {
  font-family: 'Monoton', cursive;
}

a {
  text-decoration: none;
  color: goldenrod;
}

.header {
  text-align: center;
}

.saved-movie, .detailed-movie, .plain-movie {
  box-shadow: 0px 0px 5px gray;
  margin: 20px;
  padding: 15px;
  vertical-align: top;
  max-width: 275px;
  display: inline-block;
  img {
    max-width: 250px;
    max-height: 250px;
  }
}

.result-wrap {
  float: left;
  text-align: center;
  margin-left: 250px;
}

.saved-wrap {
  float: right;
  text-align: center;
  margin-right: 250px;
}